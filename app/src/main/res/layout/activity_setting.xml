<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting_activity"
    android:background="@color/bagh">

    <ImageView
        android:id="@+id/Sback_Arrow"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/left_arrow"
        app:tint="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/Sback_Arrow">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Sprofile_image"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/person"
            app:civ_border_width="5dp"
            app:civ_border_color="#14F803"
            android:fadingEdgeLength="20dp"
            android:layout_marginStart="5dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            android:id="@+id/upload_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/upload_image"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-45dp"/>

        <EditText
            android:id="@+id/Suser_name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/name_about_bg"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="7dp"

            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="5dp" />

        <EditText
            android:id="@+id/about"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/name_about_bg"
            android:drawableLeft="@drawable/tell_about"
            android:drawablePadding="7dp"
            android:ems="10"
            android:hint="Tell me something about yourself!!"
            android:inputType="textPersonName"
            android:paddingLeft="5dp" />


    </LinearLayout>

</RelativeLayout>